#list1
	if (ls /var/lib/apt | grep -i lists)
			then
		sudo -i mv /var/lib/apt/lists /var/lib/apt/lists.old
		sudo -i mkdir -p  /var/lib/apt/lists/partial
			else
		sudo -i mkdir -p  /var/lib/apt/lists/partial
	fi
#list1fim
			else
#list2
