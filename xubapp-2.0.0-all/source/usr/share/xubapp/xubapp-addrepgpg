else
	echo -e '\n Configuracao dos repositorios terminada.'
#	echo -e '\b Indo para a proxima etapa'
	echo -e "Voltando ao menu principal..."
	echo -e '\b Aguarde 30 Segundos ou aperte "Enter".'
